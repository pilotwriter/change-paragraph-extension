{
    "manifest_version": 2,
    "name": "Popup extension",
    "version": "0.1",
    "content_scripts": [
      { 
           "matches": [
            "<all_urls>"
        ],
        "js": [
            "content.js"
        ]
      }],
      "permissions": [
        "tabs"
      ],
      "background":{
          "scripts":["background.js"]  
         },
         "browser_action":{
             "default_icon":"icon.png",
             "default_popup" : "popup.html",
             "default_title":"Popup will come here"
         }

}